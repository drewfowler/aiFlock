{ 
  "permissions": {
    "allow": [
      "Edit",
      "Write",
      "Bash(git *)"
    ]
  },
  "companyAnnouncements": [
    "Welcome to Acme Corp! Review our code guidelines at docs.acme.com",
    "Reminder: Code reviews required for all PRs",
    "New security policy in effect"
  ],
  "hooks": {
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "\"${FLOCK_PROJECT_DIR:-$CLAUDE_PROJECT_DIR}\"/.claude/hooks/update_status.sh"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "\"${FLOCK_PROJECT_DIR:-$CLAUDE_PROJECT_DIR}\"/.claude/hooks/update_status.sh"
          }
        ]
      }
    ],
    "Notification": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "\"${FLOCK_PROJECT_DIR:-$CLAUDE_PROJECT_DIR}\"/.claude/hooks/update_status.sh"
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "\"${FLOCK_PROJECT_DIR:-$CLAUDE_PROJECT_DIR}\"/.claude/hooks/update_status.sh"
          }
        ]
      }
    ]
  }
}
