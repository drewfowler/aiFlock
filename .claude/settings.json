{ 
  "hooks": {
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "\"${FLOCK_PROJECT_DIR:-$CLAUDE_PROJECT_DIR}\"/.claude/hooks/update_status.sh"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "\"${FLOCK_PROJECT_DIR:-$CLAUDE_PROJECT_DIR}\"/.claude/hooks/update_status.sh"
          }
        ]
      }
    ],
    "Notification": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "\"${FLOCK_PROJECT_DIR:-$CLAUDE_PROJECT_DIR}\"/.claude/hooks/update_status.sh"
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "\"${FLOCK_PROJECT_DIR:-$CLAUDE_PROJECT_DIR}\"/.claude/hooks/update_status.sh"
          }
        ]
      }
    ]
  }
}
